<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ajbenn04.alex.hw2rockpaperscissors.Scores">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/txt_Wins"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#A9F5F2"
        android:gravity="center"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/txt_Losses"
        android:background="#A9A9F5"
        android:textAlignment="center"
        android:layout_below="@+id/txt_Wins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/txt_Draws"
        android:layout_below="@+id/txt_Losses"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#A9F5F2"
        android:gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/btn_Title"
        android:onClick="goToTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_ReturnGame"
        android:layout_alignStart="@+id/btn_ReturnGame" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Return to Game"
        android:id="@+id/btn_ReturnGame"
        android:onClick="returnToGame"
        android:layout_above="@+id/btn_Title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
